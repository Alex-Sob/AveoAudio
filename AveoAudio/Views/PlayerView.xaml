<UserControl
    x:Class="AveoAudio.Views.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:AveoAudio.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BluetoothIconBrush" Color="DodgerBlue" />
        <SolidColorBrush x:Key="GoToBluetoothDevicesButtonBackground" Opacity="0.5" Color="White" />
        <SolidColorBrush x:Key="TagBackground" Opacity="0.2" Color="WhiteSmoke" />
        <SolidColorBrush x:Key="TrackBoxBackground" Opacity="0.2" Color="Black" />
        <SolidColorBrush x:Key="TrackInfoBackground" Opacity="0.2" Color="Black" />

        <Style x:Key="BluetoothIcon" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Grid>
                            <Ellipse Fill="{StaticResource BluetoothIconBrush}" />
                            <TextBlock Text="&#xe702;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="White" Margin="7" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GoToBluetoothDevicesButtonStyle" TargetType="Button" BasedOn="{StaticResource Button}">
            <Setter Property="Background" Value="{StaticResource GoToBluetoothDevicesButtonBackground}" />
            <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="30" />
        </Style>

        <Style x:Key="TrackBox" TargetType="ContentControl">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border Background="{StaticResource TrackBoxBackground}" CornerRadius="15">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TrackInfoContainer" TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource TrackInfoBackground}" />
            <Setter Property="Padding" Value="20 10" />
        </Style>

        <Style x:Key="TrackInfoIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="TrackInfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke" />
        </Style>

        <Style x:Key="TagIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="Tag" TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource TagBackground}" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Margin" Value="5 0 0 0" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Padding" Value="10 3" />
        </Style>

        <DataTemplate x:Key="BestTimeOfDayTagTemplate" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Text="{x:Bind}" Margin="0 0 5 0" Style="{StaticResource TrackInfoText}" />
                <TextBlock Text="&#xe735;" Foreground="Orange" Style="{StaticResource TagIcon}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DefaultTagTemplate" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Text="{x:Bind}" Style="{StaticResource TrackInfoText}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TagTemplate_private" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Margin="0 0 5 0" Style="{StaticResource TrackInfoText}">private</TextBlock>
                <TextBlock Text="&#xec19;" Foreground="PaleVioletRed" Style="{StaticResource TagIcon}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TagTemplate_public" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Margin="0 0 5 0" Style="{StaticResource TrackInfoText}">public</TextBlock>
                <TextBlock Text="&#xe716;" Foreground="DodgerBlue" Style="{StaticResource TagIcon}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TagTemplate_Sun" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Margin="0 0 5 0" Style="{StaticResource TrackInfoText}">Sun</TextBlock>
                <TextBlock Text="&#xf08c;" Foreground="Yellow" Style="{StaticResource TagIcon}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TagTemplate_Winter" x:DataType="x:String">
            <StackPanel Style="{StaticResource Tag}">
                <TextBlock Margin="0 0 5 0" Style="{StaticResource TrackInfoText}">Winter</TextBlock>
                <TextBlock Text="&#xedad;" Foreground="DeepSkyBlue" Style="{StaticResource TagIcon}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="Transparent"
          ManipulationMode="TranslateX,TranslateY"
          ManipulationCompleted="OnImageManipulationCompleted"
          Tapped="{x:Bind ViewModel.TogglePlayback}">

        <ContentControl Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Style="{StaticResource BluetoothIcon}"
                        Visibility="{x:Bind ViewModel.IsConnectedToDevice, Mode=OneWay}" />

        <Button HorizontalAlignment="Center"
                Style="{StaticResource GoToBluetoothDevicesButtonStyle}"
                Visibility="{x:Bind ViewModel.IsNotConnectedToDevice, Mode=OneWay}"
                Click="{x:Bind ViewModel.OpenBluetoothSettings}"
                Tapped="OnPlayerElementTapped">
            <Grid>
                <Ellipse Fill="{StaticResource BluetoothIconBrush}" />
                <TextBlock Text="&#xe702;" Margin="10" />
            </Grid>
        </Button>

        <ContentControl
            Margin="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Style="{StaticResource TrackBox}"
            Visibility="{x:Bind ViewModel.HasCurrentTrack, Mode=OneWay}"
            DoubleTapped="{x:Bind ViewModel.ViewTrackInQueue}"
            Tapped="OnPlayerElementTapped">

            <Grid RowDefinitions="Auto, Auto">
                <StackPanel Margin="20 20 20 20">
                    <TextBlock Text="{x:Bind ViewModel.CurrentTrack, Mode=OneWay}" FontSize="24" />
                    <TextBlock Text="{x:Bind ViewModel.CurrentTrack.Genre, Mode=OneWay}" Margin="0 10 0 0" />
                    <TextBlock Text="{x:Bind ViewModel.CurrentTrack.Year, Mode=OneWay}" />
                </StackPanel>

                <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Style="{StaticResource TrackInfoContainer}" Visibility="{x:Bind ViewModel.IsPaused, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe8ec;" Foreground="Violet" Margin="0 2 0 0" Style="{StaticResource TrackInfoIcon}" />
                        <StackPanel x:Name="tags" Orientation="Horizontal" />

                        <TextBlock Text="&#xe710;" Foreground="DeepSkyBlue" Margin="20 2 4 0" Style="{StaticResource TrackInfoIcon}" />
                        <TextBlock Text="{x:Bind ViewModel.CurrentTrack.DateAdded, Converter={StaticResource DateConverter}, Mode=OneWay}" Style="{StaticResource TrackInfoText}" VerticalAlignment="Center" />

                        <TextBlock Text="&#xf5b0;" Foreground="Turquoise" Margin="20 1 5 0" Style="{StaticResource TrackInfoIcon}" Visibility="{x:Bind ViewModel.HasDateLastPlayed, Mode=OneWay}" />
                        <TextBlock Text="{x:Bind ViewModel.CurrentTrack.LastPlayedOn, Converter={StaticResource DateConverter}, Mode=OneWay}" Style="{StaticResource TrackInfoText}" VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>
        </ContentControl>

        <Button
            Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Style="{StaticResource Button}" FontSize="18"
            Click="{x:Bind ViewModel.RefreshImage}" Tapped="OnPlayerElementTapped">&#xe72c;</Button>
    </Grid>
</UserControl>
